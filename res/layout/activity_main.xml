<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yangbang.beatboxteach.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.yangbang.beatboxteach.view.TitleBar>

    <LinearLayout
        android:id="@+id/activity_main_linear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/project_title_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5" >

        <TextView
            android:id="@+id/activity_main_bar_tv0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="文字教学" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/activity_main_bar_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="视频教学" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>